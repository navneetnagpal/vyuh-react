{
  "name": "@vyuh/react-feature-blog",
  "version": "0.2.7",
  "description": "The Blog feature package for the Vyuh React framework",
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production tsup",
    "lint": "eslint \"src/**/*.ts*\"",
    "lint:fix": "eslint \"src/**/*.ts*\" --fix"
  },
  "keywords": [
    "vyuh",
    "react",
    "feature",
    "blog"
  ],
  "homepage": "https://vyuh.tech",
  "bugs": {
    "url": "https://github.com/vyuh-tech/vyuh/issues"
  },
  "packageManager": "pnpm@10.6.3",
  "contributors": [
    {
      "name": "Pavan Podila",
      "email": "pavan@vyuh.tech",
      "url": "https://github.com/pavanpodila"
    }
  ],
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@vyuh/react-core": "^0.2.7",
    "@vyuh/react-extension-content": "^0.2.7",
    "lucide-react": "^0.482.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.1",
    "@tailwindcss/postcss": "^4.1.1",
    "@types/node": "^22.13.17",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "clsx": "^2.1.1",
    "daisyui": "^5.0.11",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.1.0",
    "tailwindcss": "^4.1.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "files": [
    "*.md",
    "src/styles.css",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./styles.css": "./src/styles.css"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  }
}
