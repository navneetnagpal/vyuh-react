{
  "name": "@vyuh/react-feature-system",
  "version": "0.3.1",
  "description": "System feature package for Vyuh React framework",
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production tsup && pnpm build:tw",
    "build:tw": "tailwindcss -i src/styles.css -o dist/styles.css",
    "dev:tw": "pnpm build:tw --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "lint:fix": "eslint \"src/**/*.ts*\" --fix"
  },
  "keywords": [
    "vyuh",
    "react",
    "cms",
    "system",
    "feature"
  ],
  "homepage": "https://vyuh.tech",
  "bugs": {
    "url": "https://github.com/vyuh-tech/vyuh/issues"
  },
  "packageManager": "pnpm@10.6.3",
  "contributors": [
    {
      "name": "Pavan Podila",
      "email": "pavan@vyuh.tech",
      "url": "https://github.com/pavanpodila"
    }
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@portabletext/react": "^3.2.1",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@vyuh/react-core": "^0.3.1",
    "@vyuh/react-extension-content": "^0.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.5.2",
    "lucide-react": "^0.482.0",
    "tailwind-merge": "^3.1.0",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.1",
    "@tailwindcss/postcss": "^4.1.1",
    "@types/node": "^22.13.17",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "tailwindcss": "^4.1.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "*.md",
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./styles.css": "./dist/styles.css"
    }
  }
}
